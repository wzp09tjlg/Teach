<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <RadioGroup
            android:id="@+id/layout_main_indicator"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#fff"
            android:layout_below="@+id/view_divider"
            android:orientation="horizontal">

            <com.wuzp.teach.widget.radio.TechRadioButton
                android:id="@+id/indicator_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:button="@null"
                android:checked="true"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="资讯"
                android:textSize="11dp"
                app:drawableSize="18dp"
                app:drawableTop="@drawable/drawable_indicator_info"/>

            <com.wuzp.teach.widget.radio.TechRadioButton
                android:id="@+id/indicator_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:button="@null"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="新闻"
                android:textSize="11dp"
                app:drawableSize="18dp"
                app:drawableTop="@drawable/drawable_indicator_news"/>

            <com.wuzp.teach.widget.radio.TechRadioButton
                android:id="@+id/indicator_fun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:button="@null"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="娱乐"
                android:textSize="11dp"
                app:drawableSize="18dp"
                app:drawableTop="@drawable/drawable_indicator_fun"/>

            <com.wuzp.teach.widget.radio.TechRadioButton
                android:id="@+id/indicator_read"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:button="@null"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="读书"
                android:textSize="11dp"
                app:drawableSize="18dp"
                app:drawableTop="@drawable/drawable_indicator_read"/>

            <com.wuzp.teach.widget.radio.TechRadioButton
                android:id="@+id/indicator_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:button="@null"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="我的"
                android:textSize="11dp"
                app:drawableSize="18dp"
                app:drawableTop="@drawable/drawable_indicator_user"/>
        </RadioGroup>
    </RelativeLayout>
</layout>
